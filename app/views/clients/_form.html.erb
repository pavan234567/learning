<div class="container">
<%= form_with(model: client,local:true) do |form| %>
<% if client.errors.any? %>
<div style="color: red">
  <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

  <ul>
    <% client.errors.each do |error| %>
      <li><%= error.full_message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<style>
  .form-control{
    background-color:aliceblue;
  }
</style>

  <div class="field form-group">
     <br>
    <%= form.text_field :first_name , class:"form-control", placeholder:"First name"%> 
  </div>

  <div class="field form-group">
    
    <%= form.text_field :last_name , class:"form-control", placeholder:"Last name"%>
  </div>

  <div class="field form-group">
   
    <%= form.text_field :email , class:"form-control" , placeholder:" Email"%>
  </div>

  <div class="field form-group">
  
    <%= form.text_field :phone , class:"form-control" , placeholder:"Phone Number"%>
  </div>

  <div class="field form-group" >
   
    <%= form.text_field :twitter , class:"form-control" , placeholder:"Twitter"%>
  </div>

   <div class="field form-group" >
     <%= form.number_field :user_id , id: :client_user_id, class:"form-control" ,value:current_user.id , type: :hidden%>
  </div>
  <div class="actions">
    <%= form.submit class:"btn btn-outline-success"%>
  </div>
<% end %>

  <br>
    <%= link_to "Show this client", @client ,class:"btn btn-outline-primary" %> &nbsp
    <%= link_to "Back to clients", clients_path,class:"btn btn-outline-secondary"%>
    
</div>
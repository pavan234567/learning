<% if client.user == current_user%>
  <div id="<%= dom_id client %>" class="card" >
    <table class="table table-striped table-bordered table-hover  ">
      <thead>
          <tr>
          <th> <strong>User ID</strong></th>
            <th><strong>First name: </strong></th>
            <th><strong>Last name:</strong></th>
            <th><strong>Email:</strong></th>
            <th><strong>Phone:</strong></th>
            <th> <strong>Twitter:</strong></th>
            
          </tr>
      </thead>
      <tbody >
          <tr>
            <td> <%= client.user_id %></td>
            <td> <%= client.first_name %></td>
            <td> <%= client.last_name %></td>
            <td>  <%= client.email %></td>
            <td>  <%= client.phone %></td>
            <td> <%= client.twitter %></td>
            <td ><%= link_to "Show", client , class:"btn btn-outline-primary" %> &nbsp&nbsp
            <%= link_to "Edit", edit_client_path(client) , class:"btn btn-outline-dark" %> 
            </td>
          </tr>
      </tbody>  
    </table>   
  </div>
<%end%>

<style>
  .btn-outline-primary{
        border-color: black;
        color:black;
  }
  .btn-outline-dark{
        border-color: black;
  }
  table{
    text-align:center;
  }
</style>



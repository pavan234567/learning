<div class="box">
<div class="card border border-dark" style="background-color: aliceblue;">
  <h2 class="card-header">Log in</h2>
  <div class="card-body border " style="background-color: aliceblue;">
    <p>
   <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

   <div class="actions ">
    <%= f.submit "Log in",class:"btn btn-outline-primary" %>
    
  </div>
<% end %>
<br>
</div>
</div>

